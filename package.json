{
  "name": "planetcnc-expression",
  "displayName": "PlanetCNC Expression",
  "description": "Syntax highlighting and autocomplete for Planet CNC files",
  "version": "0.0.4",
  "publisher": "styletronix.net",
  "private": true,
  "license": "MIT",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:planetcncexpr",
    "onLanguage:planetcncgcode"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "planetcnc-expression.update",
        "title": "PlanetCNC: Download new language data only",
        "icon": "$(cloud-download)"
      },
      {
        "command": "planetcnc-expression.updateforced",
        "title": "PlanetCNC: Download all language data again",
        "icon":"$(cloud-download)" 
       }
    ],
    "languages": [
      {
        "id": "planetcncexpr",
        "aliases": [
          "PlanetCNC Expression",
          "planetcncexpr"
        ],
        "extensions": [
          ".txt"
        ]
      },{
        "id": "planetcncgcode",
        "aliases": [
          "PlanetCNC GCode",
          "planetcncgcode"
        ],
        "extensions": [
          ".gcode"
        ]
      }
    ],
    "grammars": [
      {
        "language": "planetcncexpr",
        "scopeName": "source.expression",
        "path": "./syntaxes/planetcncexpr.tmLanguage.json"
      },
      {
        "language": "planetcncgcode",
        "scopeName": "source.gcode",
        "path": "./syntaxes/planetcncgcode.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}